{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "dialog:default",
    "fs:default",
    "fs:allow-write-text-file",
    "fs:allow-mkdir",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$HOME/*"
        },
        {
          "path": "$HOME/**/*"
        },
        {
          "path": "$DOCUMENT/*"
        },
        {
          "path": "$DOCUMENT/**/*"
        },
        {
          "path": "$DOWNLOAD/*"
        },
        {
          "path": "$DOWNLOAD/**/*"
        },
        {
          "path": "$DESKTOP/*"
        },
        {
          "path": "$DESKTOP/**/*"
        },
        {
          "path": "$APPDATA/HabitFlow/Backups/*"
        },
        {
          "path": "$APPDATA/HabitFlow/Backups/**/*"
        }
      ]
    },
    "os:default",
    "notification:default",
    "autostart:default"
  ]
}